FROM golang:alpine

ENV libxml2_version 2.9.8
ENV libvirt_version 7.1.0
ENV meson_version 0.54.3

RUN set -ex
RUN apk add ca-certificates g++ git go libnl-dev linux-headers make libvirt-dev libvirt
RUN wget ftp://xmlsoft.org/libxml2/libxml2-${libxml2_version}.tar.gz -P /tmp && \
    tar -xf /tmp/libxml2-${libxml2_version}.tar.gz -C /tmp
WORKDIR /tmp/libxml2-${libxml2_version}
RUN ./configure && \
    make -j$(nproc) && \
    make install
